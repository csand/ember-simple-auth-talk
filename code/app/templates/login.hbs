<h1>
  Please Sign In
</h1>
<div class="row">
  <form {{action 'authenticate' on='submit'}} class="col-sm-4">
    <div class="form-group">
      <label>Email</label>
      {{input value=identification type='email' class='form-control'}}
    </div>
    <div class="form-group">
      <label>Password</label>
      {{input value=password type='password' class='form-control'}}
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Sign In
      </button>
    </div>
  </form>
</div>
